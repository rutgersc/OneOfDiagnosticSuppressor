<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>SvSoft.OneOf.Analyzers.SwitchDiagnosticSuppression</RootNamespace>

    <IsPackable>false</IsPackable>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.2.0" />
    <PackageReference Include="NUnit" Version="3.13.3" />
    <PackageReference Include="NUnit3TestAdapter" Version="4.2.1" />
    <PackageReference Include="coverlet.collector" Version="3.1.2">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="OneOf" Version="3.0.223" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="3.11.0" />
  </ItemGroup>

  <!-- We need instances of some analyzers in the test project.
       Because they are internal classes we need to specify an assembly to load them from.
       Hence the dll reference. -->
  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.CodeStyle" Version="3.11.0" IncludeAssets="None" GeneratePathProperty="true" />
    <Reference Include="$(PkgMicrosoft_CodeAnalysis_CSharp_CodeStyle)/analyzers/dotnet/cs/*.dll" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\OneOfDiagnosticSuppressor\OneOfDiagnosticSuppressor.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\OneOf\OneOf.SourceGenerator\GeneratorDiagnosticDescriptors.cs">
      <Link>GeneratorDiagnosticDescriptors.cs</Link>
    </Compile>
    <Compile Include="..\OneOf\OneOf.SourceGenerator\OneOfGenerator.cs">
      <Link>OneOfGenerator.cs</Link>
    </Compile>
  </ItemGroup>

</Project>
